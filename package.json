{
  "name": "cast",
  "version": "0.1.0",
  "description": "Make a TUI app using a config file",
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "main": "./src/index.ts",
  "bin": {
    "cast": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "dev:stdin": "nodemon -I",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "start": "ts-node ./src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": {
    "name": "Thassio Victor",
    "email": "tvmcarvalho@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thassiov/cast.git"
  },
  "keywords": [
    "tui",
    "cli",
    "ink",
    "ink-form",
    "react",
    "child_process",
    "utility",
    "typescript",
    "spawn"
  ],
  "bugs": {
    "url": "https://github.com/thassiov/cast/issues"
  },
  "homepage": "https://github.com/thassiov/cast#readme",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "pino": "^8.16.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.23.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts,tsx"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ]
    }
  }
}
